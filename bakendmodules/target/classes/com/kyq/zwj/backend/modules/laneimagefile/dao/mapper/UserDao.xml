<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kyq.zwj.backend.modules.laneimagefile.dao.UserDao">
    <select id="getUser" parameterType="com.kyq.zwj.backend.entity.User" resultType="com.kyq.zwj.backend.entity.User">
      <![CDATA[
        SELECT * FROM user WHERE username=#{username} AND password=#{password}
      ]]>
    </select>
    <insert id="addUser" parameterType="com.kyq.zwj.backend.entity.User" flushCache="true">
        <![CDATA[
        INSERT INTO user (id,username,password) VALUES (#{id},#{username},#{password})
       ]]>
    </insert>
    <update id="updateUser" parameterType="com.kyq.zwj.backend.entity.User">
         <![CDATA[
         UPDATE user SET password=#{password} WHERE id=#{id}
          ]]>
    </update>
    <delete id="deleteUser" parameterType="int">
         <![CDATA[
         DELETE FROM user WHERE id=#{id}
          ]]>
    </delete>

    <select id="findRecords" parameterType="String" resultType="java.util.Map">
        ${value}
    </select>
</mapper>